<h1>Edit form</h1>

<form action="http://localhost:3000/update_photo/<%= @photo.id %>">


<p>
  <label>Caption:</label>
  <input type="text" name="the_caption" value="<%= @photo.caption %>"> </input>
</p>

<p>
  <label>Image URL:</label>
  <input type="text" name="the_source" value="<%= @photo.source %>"> </input>
</p>


<button>Update</button>
</form>
