<h1>Edit Photo</h1>

<form action ="http://localhost:3000/update_photo/<%= @p.id %>">
  <div>
    <label for="photo_caption">New Caption:</label>
    <input type="text" name="the_caption" value="<%= @p.caption %>">
</div>

<div>
  <label for="photo_source">New Source:</label>
  <input type="text" name="the_source" value="<%= @p.source %>">
</div>

<div>
<button>Update</button>
</div>

</form>
