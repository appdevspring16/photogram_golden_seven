<h1>Edit Photo</h1>

<% i = @list_of_photos.find_by({ :id => params[:id] }) %>

<form action="http://localhost:3000/update_photo/<%= i.id %>">
  <div>
    <label for="photo_caption">Caption:</label>
    <input id="photo_caption" type="text" name="the_caption" value="<%= i.caption %>">
  </div>
  <div>
    <label for="photo_image_url">Image URL:</label>
    <input id="photo_image_url" type="text" name="the_source" value="<%= i.source %>">
  </div>
  <div>
    <button>Update Photo</button>
  </div>
</form>
